{
    // Type, value : "Feature"
    "type": {
        "type": "string"
    },
    // Geometry datas for openlayers
    "geometry": {
        "properties": {
            "coordinates": {
                "type": "double"
            },
            "type": {
                "type": "string"
            }
        }
    },
    // Location for Kuzzle, same value as geometry.coordinates
    "location": {
        "type": "geo_point",
        "lat_lon": true
    },
    // Properties : list of fields, default : "name"
    "properties": {
        "properties": {
            "name": {
                "type": "string"
            }
        }
    }
}