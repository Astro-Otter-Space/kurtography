header#navbar.mdl-layout__header.mdl-layout__header--transparent
    div.mdl-layout__header-row
        span.mdl-layout-title Kurtography
        div.mdl-layout-spacer

        // Research
        form(action="#")
            div.mdl-textfield.mdl-js-textfield.mdl-textfield--expandable
                label.mdl-button.mdl-js-button.mdl-button--icon(for="kuzzleSearch")
                    i.material-icons search
                div.mdl-textfield__expandable-holder
                    input.mdl-textfield__input#kuzzleSearch(type="text")
                    label.mdl-textfield__label(for="kuzzleSearch") Expandable Input

        // User notification (only if connected) : button and menu
        button#BtnNotificationUser.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--icon.hidden
            i.material-icons notifications_none
        ul#listNotificationUser.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect.hidden(for="BtnNotificationUser")
        span#NotificationUser.mdl-badge.hidden

        // Button and menu login/register/logout
        button#demo-menu-lower-right.mdl-button.mdl-js-button.mdl-button--icon
            i.material-icons more_vert
        ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect(for="demo-menu-lower-right")
            li.mdl-menu__item
                a.mdl-navigation__link(data-link="auth", href="#auth")
                    i.material-icons flag
                    | Log in
            li.mdl-menu__item.mdl-menu__item--full-bleed-divider
                a.mdl-navigation__link(data-link="register", href="#register")
                    i.material-icons person_add
                    | Sign up
            li.mdl-menu__item(disabled="disabled")
                a.mdl-navigation__link(data-link="logout", href="#logout")
                    i.material-icons exit_to_app
                    | Log out
